        }

        .hobby-description {
            font-size: 13px;
            line-height: 1.5;
            color: #bdc3c7;
        }

        .separator {
            border: none;
            border-top: 2px solid #34495e;
            margin: 40px auto;
            max-width: 1200px;
            position: relative;
        }

        .separator::after {
            content: "âœ–";
            position: absolute;
            top: -12px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #2c3e50;
            padding: 0 10px;
            color: #5dade2;
        }

        .sections-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
            flex-wrap: wrap;
        }

        .section-box {
            border: 2px solid white;
            min-width: 250px;
            flex: 1;
        }

        .section-title {
            background-color: black;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 16px;
            border-bottom: 2px solid white;
        }

        .section-content {
            background-color: #1a1a1a;
