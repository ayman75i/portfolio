    font-size: 1.1rem;
    line-height: 1.8;
}

.conteneur-bouton {
    text-align: left;
}

/* mobiles */
@media(max-width: 768px) {
    .conteneur-presentation {
        grid-template-columns: 1fr;
    }

    .conteneur-bouton {
